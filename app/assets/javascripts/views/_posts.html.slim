div ng-repeat="post in posts | filter:{title: '', rubrics: {id: data.rubric}}"
  .row
    span style="font-size:20px; margin-left:10px;"
      a href="#/posts/{{post.id}}" 
        h2
          | {{post.title}}
      | posted by 
      a ng-href="#/users/{{post.user.id}}"
        p
          | {{post.user.email}}
    p
      | {{post.body}}
    div ng-show="isMyPosts(post)"
      button.btn.btn-warning ng-click="updatePost(post)" Update
      button.btn.btn-danger ng-click="deletePost(post)" Delete
  hr
